<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="internal-nlog.txt">

 <variable name="fileName" value="${processName}" />
  <!-- the targets to write to -->
  <targets>
    <target xsi:type="File"
        name="file"
        encoding="utf-8"
        fileName="${basedir}/Logs/${fileName}.log"
        layout="${longdate:format=yyyy-MM-dd HH:mm:ss.fff}|${logger}|${level:uppercase=true}|${processid}|${threadid}|${message} ${exception:format=tostring}"
        archiveFileName="${basedir}/Logs/${fileName}.{#}.log"
        archiveEvery="Day"
        archiveNumbering="Date"
        archiveDateFormat="yyyyMMdd"
        maxArchiveFiles="7"
        concurrentWrites="true"
        keepFileOpen="false" />
    <target xsi:type="ColoredConsole" name="console"
            layout="${longdate:format=HH:mm:ss.fff}|${logger}|${level:uppercase=true}|${message} ${exception:format=tostring}">
    </target>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Debug" writeTo="file" />
    <logger name="*" minlevel="Debug" writeTo="console" />
  </rules>
</nlog>